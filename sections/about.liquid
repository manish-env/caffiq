{%- style -%}
  .about-section {
    padding: 5rem 2rem;
    background: #fff;
  }

  .about-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-text h2 {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1rem;
  }

  .about-text .subtitle {
    font-family: 'Poppins', sans-serif;
    font-size: 1.2rem;
    color: #c8a97e;
    margin-bottom: 1.5rem;
  }

  .about-text p {
    font-family: 'Poppins', sans-serif;
    color: #666;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .about-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .stat {
    text-align: center;
  }

  .stat .number {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #c8a97e;
    display: block;
    margin-bottom: 0.5rem;
  }

  .stat .label {
    font-family: 'Poppins', sans-serif;
    color: #666;
    font-size: 0.9rem;
  }

  .about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  @media screen and (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .about-image {
      order: -1;
    }

    .about-stats {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
{%- endstyle -%}

<section class="about-section">
  <div class="about-content">
    <div class="about-text">
      <h2>{{ section.settings.heading }}</h2>
      <p class="subtitle">{{ section.settings.subtitle }}</p>
      <p>{{ section.settings.description }}</p>
      <div class="about-stats">
        <div class="stat">
          <span class="number">{{ section.settings.years }}</span>
          <span class="label">Years of Excellence</span>
        </div>
        <div class="stat">
          <span class="number">{{ section.settings.varieties }}</span>
          <span class="label">Coffee Varieties</span>
        </div>
        <div class="stat">
          <span class="number">{{ section.settings.customers }}</span>
          <span class="label">Happy Customers</span>
        </div>
      </div>
    </div>
    <div class="about-image">
      <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt }}">
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Crafting Perfect Moments Since 2010"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At CoffeeFy, we believe in creating more than just great coffee. We create experiences that bring people together. Our beans are carefully selected from sustainable farms around the world, and our baristas are trained to craft the perfect cup every time."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "About Image"
    },
    {
      "type": "text",
      "id": "years",
      "label": "Years of Excellence",
      "default": "14"
    },
    {
      "type": "text",
      "id": "varieties",
      "label": "Coffee Varieties",
      "default": "50+"
    },
    {
      "type": "text",
      "id": "customers",
      "label": "Happy Customers",
      "default": "1000+"
    }
  ],
  "presets": [
    {
      "name": "About Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %} 